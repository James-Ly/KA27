    <body class="preload">
        <header class = "main-header">
            <div class = "main-header__div1">
                <a href = "/" class = "main-headers__logo"><img src = "../image/KA27-logo.jpg" alt="KA27"></a>
                <div class='vertical-align'></div>
            </div><nav class = "navigation-bar">
                <nav class = "main-nav">
                    <ul class ="main-nav__items">
                        <li class = "main-nav__item">
                            <a href="/">Trang chủ</a>
                        </li><li class = "main-nav__item">
                            <a href="/contact/">Liên hệ</a>
                        </li><li class = "main-nav__item">
                            <a href="main.html">Giao hàng</a>
                        </li><li class = "main-nav__item">
                            <a href="/payment/">Thanh toán</a>
                        </li><li class = "main-nav__item">
                            <a href="main.html">Tin tức</a>
                        </li>
                    </ul>
                </nav><main class="fashion-nav">
                    <div class = "fashion-nav__items">
                            <div class='vertical-align'></div>
                        <% for(var i = 0; i < distincttype.length ; i++){ %>
                            <div class = "fashion-nav__item">
                                <a class = 'fashion-nav__itemanchor' href="#"><%=distincttype[i] %></a>
                                    <div class ="dropdown-content">
                                        <div class="row">
                                            <% for(var j = 0 ; j < productsnav[i].length ; j++) { %>
                                                <% if (j % 3 == 0){ %>
                                                    <div class="column">
                                                        <a class = "fashion-nav__subitemanchor" href = "#" title = "<%= distincttype[i] %>"><%= productsnav[i][j] %></a>
                                                <% } else if (j == productsnav[i].length - 1) { %>
                                                        <a class = "fashion-nav__subitemanchor" href = "#" title = "<%= distincttype[i] %>"><%= productsnav[i][j] %></a>
                                                    </div>
                                                <% } else { %>
                                                        <a class = "fashion-nav__subitemanchor" href = "#" title = "<%= distincttype[i] %>"><%= productsnav[i][j] %></a>
                                                <% } %>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                            <div class ="searchbox">
                                <form class="searchform" autocomplete="off" action ="/">
                                    <div class=autocomplete>
                                    <input id = "myInput" type = "text" name = "SearchFashion" Placeholder ="Tìm sản phẩm...">
                                        <div id="myInput__autocomplete-list" class="autocomplete-items"></div>
                                    </input>
                                    </div>
                                </form>
                            </div>
                </main>
            </nav>
        </header>
        <main class="main-body">	
                <main class = 'paymentmain-body'>
                        <div class='payment-header'>Thanh toán</div>
                        <div class='payment-details'>Phương thức thanh toán
